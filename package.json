{
  "name": "trainer-app-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "yarn build:style && react-scripts start",
    "build:style":"postcss src/assets/styles/tailwind.css -o src/index.css",
    "build": "react-scripts build",
    "lint": "tslint -t stylish -p ./tsconfig.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "tslint -t stylish -p ./tsconfig.json --fix 'src/**/*.{ts,tsx}'",
    "test": "react-scripts test --coverage --watchAll=false -u",
    "test:watch": "react-scripts test --coverage --watchAll",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@commitlint/cli": "^8.3.5",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "autoprefixer": "^9.7.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "node-sass": "^4.13.1",
    "postcss-cli": "^7.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "redux-mock-store": "^1.5.4",
    "redux-saga": "^1.1.3",
    "tailwindcss": "^1.2.0",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "@types/redux-logger": "^3.0.7",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.0",
    "prettier": "^2.0.2",
    "redux-logger": "^3.0.6",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.2.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn run lint:fix"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/*.{js,jsx,ts,tsx}"
    ]
  }
}
